# DadaCat Twilio environment variables example
# Copy this file to .env and fill in the values

# AWS
AWS_REGION=us-east-1

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here  # Looks like: ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here    # Your Twilio auth token from the console
TWILIO_PHONE_NUMBER=+15555555555                 # Your Twilio phone number in E.164 format

# DynamoDB
DYNAMODB_TABLE=dadacat-conversations-dev

# SNS
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:dadacat-notifications-dev

# SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/dadacat-dlq-dev

# Application
LOG_LEVEL=INFO
DONATION_THRESHOLD=5
DONATION_MESSAGE="You've sent {count} messages today to DadaCat! Please consider supporting this service with a donation at example.com/donate"
DEBUG=false